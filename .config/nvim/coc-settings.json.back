{
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["haskell", "lhaskell"]
    }
  },
  "sql.formatOptions": {
    "uppercase": false
  },
  "rust-analyzer.inlayHints.enable": false,
  "rust-analyzer.server.path": "/usr/local/bin/rust-analyzer",
  "svelte.enable-ts-plugin": true
}
